#include<iostream>
#include<vector>
#include<string>
#include<cstring>
using namespace std;

struct Movies {
    string title;
    double price;
};

void displaymovies(vector<Movies>& movies) {
    cout << "Now at the cinema :\n";
    for (int i = 0;i < movies.size();i++) {
        cout << movies[i].title << " " << movies[i].price << endl;
    }
}

void priceoptions(vector<string> pricing) {
    pricing = { "1.Student ","2.Adult ","3.Children " };
    for (int i = 0;i < pricing.size();i++) {
        cout << pricing[i] << endl;
    }
}

